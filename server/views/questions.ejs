<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course End Survey</title>
    <style>
        body {
            font-family: "Helvetica Neue", Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 20px;
        }

        h1 {
            text-align: center;
            font-size: 28px;
            margin-bottom: 20px;
            color: #007bff;
        }

        h2 {
            text-align: center;
            font-size: 24px;
            margin-bottom: 10px;
            color: #007bff;
        }

        table {
            width: 80%;
            border-collapse: collapse;
            margin: 20px auto;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        th, td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: center;
            font-size: 16px;
            color: #333;
        }

        th {
            background-color: #f2f2f2;
        }

        th.rating-column {
            width: 40%;
        }

        .form-container {
            max-width: 600px;
            margin: 0 auto;
            text-align: center;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .rating-instructions {
            text-align: center;
            font-size: 14px;
            margin-bottom: 20px;
            color: #666;
        }

        .submit-button, .next-button {
            background-color: #007bff;
            color: #fff;
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

        .submit-button:hover, .next-button:hover {
            background-color: #0056b3;
        }

        .logo-container {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 999; 
        }

        .logo-container img {
            width: 170px;
            height: auto;
        }

        .logo-container img {
            image-rendering: crisp-edges;
            image-rendering: -moz-crisp-edges;
            image-rendering: pixelated;
        }
        body {
        font-family: "Helvetica Neue", Arial, sans-serif;
        background-color: #d8d4d4;
        background-image: url("FD.jpg"); /* Add this line to set the background image */
        background-size: cover; /* Adjust the background image size */
        background-position: center center; /* Adjust the background image position */
        margin: 20px;
    }

    </style>
</head>
<body>

    <div class="form-container">

        <div class="logo-container">
            <img src="karpagam_logo.png" alt="Karpagam Logo">
        </div>

        <h2>COURSE END SURVEY</h2>
        <h3>COURSE CODE /COURSE NAME</h3>
        <h3>Feedback Form</h3>
        <!-- Displaying roll number below the "Feedback form" text -->
        <p>Roll Number: <span id="rollNumber"></span></p>

        <p class="rating-instructions">
            1-Bad &nbsp; 2-Satisfactory &nbsp; 3-Good &nbsp; 4-Very Good &nbsp; 5-Excellent
        </p>

        <form>
            <table>
                <tr>
                    <th>Question</th>
                    <th class="rating-column" colspan="5">Your rating here</th>
                </tr>
                <tr>
                    <td>How satisfied are you with the course content?</td>
                    <td>
                        <input type="radio" name="rating1" value="1">1
                    </td>
                    <td>
                        <input type="radio" name="rating1" value="2">2
                    </td>
                    <td>
                        <input type="radio" name="rating1" value="3">3
                    </td>
                    <td>
                        <input type="radio" name="rating1" value="4">4
                    </td>
                    <td>
                        <input type="radio" name="rating1" value="5">5
                    </td>
                </tr>
                <tr>
                    <td>Did the course meet your expectations?</td>
                    <td>
                        <input type="radio" name="rating2" value="1">1
                    </td>
                    <td>
                        <input type="radio" name="rating2" value="2">2
                    </td>
                    <td>
                        <input type="radio" name="rating2" value="3">3
                    </td>
                    <td>
                        <input type="radio" name="rating2" value="4">4
                    </td>
                    <td>
                        <input type="radio" name="rating2" value="5">5
                    </td>
                </tr>
                <tr>
                    <td>Faculty encouraged reading books and helped inside and outside class</td>
                    <td>
                        <input type="radio" name="rating2" value="1">1
                    </td>
                    <td>
                        <input type="radio" name="rating2" value="2">2
                    </td>
                    <td>
                        <input type="radio" name="rating2" value="3">3
                    </td>
                    <td>
                        <input type="radio" name="rating2" value="4">4
                    </td>
                    <td>
                        <input type="radio" name="rating2" value="5">5
                    </td>
                </tr>
            
            </table>

            <input type="submit" value="Submit Feedback" class="submit-button">
            <button class="next-button" onclick="navigateToNextForm()">Next</button>
        </form>
    </div>

    <script>
        // Function to retrieve roll number from the URL
        function getRollNumberFromURL() {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get('roll') || '';
        }

        // Display the roll number on the page
        const rollNumberSpan = document.getElementById('rollNumber');
        const rollNumber = getRollNumberFromURL();
        rollNumberSpan.textContent = rollNumber;

        function navigateToNextForm() {
            //window.location.href = 'next_feedback_form.html';
        }
    </script>
</body>
</html>
